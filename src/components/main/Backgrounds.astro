---
import Button from "./Button.astro";
import Section from "./Sections.astro";
import BackgroundsGrid from "./BackgroundsGrid.astro";
---

<Section>
  <BackgroundsGrid />
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="0.5"
    stroke="currentColor"
    class="bg-quaternary size-10 md:size-16 p-1 md:p-4 absolute top-0 right-0 md:translate-0 md:translate-x-[calc(100%+1px)] translate-y-[calc(-100%-1px)] md:translate-y-[calc(-1px)] border-l border-t border-b-0 border-r-0 md:border-t md:border-l-0 md:border-r md:border-b border-tertiary/30"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M6.429 9.75 2.25 12l4.179 2.25m0-4.5 5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0 4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0-5.571 3-5.571-3"
    ></path>
  </svg>
  <h3 class="text-2xl font-regular text-center z-2">
    Add dynamic backgrounds to give your <br /> website a sleek, professional look
  </h3>
  <Button href="/backgrounds" text="Backgrounds" classAdd="z-2" />
</Section>
