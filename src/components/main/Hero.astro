---
const items = [
  { text: "Astro", svg: "../../assets/icons/astro.svg" },
  { text: "Tailwind", svg: "../../assets/icons/tailwindcss.svg" },
  { text: "Three.js", svg: "../../assets/icons/threedotjs.svg" },
];
const step = 5.5;
---

<main class="w-full h-screen">
  <section
    class="text-tertiary w-full grid grid-cols-1 md:grid-cols-2 gap-4 items-center justify-center h-full"
  >
    <div
      class="flex items-center justify-center border-r border-tertiary/30 h-full"
    >
      <h1>UI components for your website</h1>
      <p>Your journey to excellence starts here.</p>
      <a href="/get-started" class="btn">Just copy and paste!</a>
    </div>

    <div class="flex items-center justify-center flex-col h-full">
      <div class="overflow-hidden h-[5.5rem] w-full">
        <div
          id="wordList"
          class="flex flex-col transition-transform duration-700 ease-in-out"
        >
          {
            items.map((item) => (
              <div class="h-[5.5rem] flex items-center justify-center gap-4 text-6xl font-bold">
                <img src={item.svg} alt={item.text} class="size-15" />
                <span>{item.text}</span>
              </div>
            ))
          }
        </div>
      </div>

      <a href="#" class="mt-20 px-4 py-2 bg-secondary rounded-lg">Get Started</a
      >
    </div>
  </section>
</main>

<script type="module">
  const wordList = document.getElementById("wordList");
  let index = 0;
  const interval = 2000;
  const step = 5.5;

  setInterval(() => {
    index = (index + 1) % items.length;
    wordList.style.transform = `translateY(-${index * step}rem)`;
  }, interval);
</script>
