---
import HeaderOne from "../components/Headers/Header1.astro";
import HeaderTwo from "../components/Headers/Header2.astro";
import HeaderThree from "../components/Headers/Header3.astro";

import Switch from "../components/switches/Switch1.astro";

import FooterOne from "../components/footers/Footer1.astro";
import FooterTwo from "../components/footers/Footer2.astro";
import FooterThree from "../components/footers/Footer3.astro";
---

<div
  class="absolute top-0 left-0 w-full h-full grid grid-cols-5 grid-rows-6 overflow-hidden"
>
  <div
    id="targetHover"
    class="absolute inset-0 bg-quaternary/70 z-1 transition-all duration-600 ease-out"
  >
  </div>

  <!-- ------Headers------ -->

  <div
    id="header-one"
    class="transition duration-1000 col-start-1 row-start-1 col-span-5 row-span-1 border-b border-tertiary/30 flex items-center justify-center"
  >
    <HeaderOne />
  </div>
  <div
    id="header-two"
    class="transition duration-1000 col-start-1 row-start-1 col-span-5 row-span-1 border-b border-tertiary/30 flex items-center justify-center translate-x-full"
  >
    <HeaderTwo />
  </div>
  <div
    id="header-three"
    class="transition duration-1000 col-start-1 row-start-1 col-span-5 row-span-1 border-b border-tertiary/30 flex items-center justify-center translate-x-full"
  >
    <HeaderThree />
  </div>

  <!-- ------Buttons------ -->

  <div
    class="col-start-5 row-start-2 col-span-1 row-span-1 border-b border-l border-tertiary/30"
  >
    <Switch />
  </div>

  <!-- ------Footers------ -->

  <div
    id="footer-one"
    class="transition duration-1000 col-start-1 row-start-5 col-span-5 row-span-2 flex items-center justify-center"
  >
    <FooterOne />
  </div>
  <div
    id="footer-two"
    class="transition duration-1000 col-start-1 row-start-5 col-span-5 row-span-2 flex items-center justify-center -translate-x-full"
  >
    <FooterTwo />
  </div>
  <div
    id="footer-three"
    class="transition duration-1000 col-start-1 row-start-5 col-span-5 row-span-2 flex items-center justify-center -translate-x-full"
  >
    <FooterThree />
  </div>
</div>

