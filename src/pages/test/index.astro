---
import Layout from "../../layouts/Layout.astro";
import CardOne from "../../components/components/cards/Card1.astro";
import CardTwo from "../../components/components/cards/Card2.astro";
import CardThree from "../../components/components/cards/Card2.astro";
import FooterOne from "../../components/components/footers/Footer2.astro";
import SwitchOne from "../../components/components/switches/Switch1.astro";
import Combobox1 from "../../components/components/comboxes/Combobox1.astro";
import Button from "../../components/components/buttons/Button1.astro";
import Header from "../../components/components/headers/Header3.astro";
import HeaderOne from "../../components/components/headers/Header1.astro";
import HeaderTwo from "../../components/components/headers/Header2.astro";
import Header3 from "../../components/components/headers/Header3.astro";
import FrameOne from "../../components/components/frames/Frame1.astro";
import FrameTwo from "../../components/components/frames/Frame2.astro";
import FrameThree from "../../components/components/frames/Frame3.astro";
import FrameFour from "../../components/components/frames/Frame4.astro";

const scale = 2; //  Modify this line to change the size

const width = 10 * scale;
const height = 6 * scale;
---

<Layout>
  <section class="bg-primary h-screen w-full flex justify-around items-center">
    <CardOne />
    <CardTwo />
    <CardThree />
  </section>
  <Header />
  <!-- Rounded switch -->
  <Button />
  <SwitchOne />
  <Combobox1 />
  <FrameOne />
  <FrameTwo />
  <FrameThree />
  <FrameFour />
  <div class="relative w-full overflow-hidden bg-gray-900 py-6">
    <div class="absolute top-0 left-0 h-full w-full">
      <div class="flex w-[200%] animate-[scroll_5s_linear_infinite]">
        <!-- Logos - se repiten 2 veces para efecto infinito -->
        <div class="flex w-1/2 items-center justify-around space-x-12">
          <span class="text-white">Logo 1</span>
          <span class="text-white">Logo 2</span>
          <span class="text-white">Logo 3</span>
          <span class="text-white">Logo 4</span>
        </div>
        <div class="flex w-1/2 items-center justify-around space-x-12">
          <span class="text-white">Logo 1</span>
          <span class="text-white">Logo 2</span>
          <span class="text-white">Logo 3</span>
          <span class="text-white">Logo 4</span>
        </div>
      </div>
    </div>

    <style>
      @keyframes scroll {
        0% {
          transform: translateX(0%);
        }
        100% {
          transform: translateX(-50%);
        }
      }
    </style>
  </div>
  <FooterOne />
</Layout>
